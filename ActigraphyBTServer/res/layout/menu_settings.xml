<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:id="@+id/layout_settings"
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:orientation="vertical" 
              android:padding="10dp"
              android:descendantFocusability="blocksDescendants"
              android:background="@color/gray">
              
    
     <TextView android:id="@+id/textViewRecording"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textColor= "@color/white"
              android:textSize="22dip" 
              android:textStyle="bold"
              android:clickable="true"
              android:focusableInTouchMode="false"
			  android:text="@string/labelRecording"
			  android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView android:id="@+id/textViewRecordingValue"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textColor= "@color/white"
              android:textSize="18dip" 
              android:textStyle="bold"
			  android:text="@string/valueRecording"
			  android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView android:id="@+id/textViewChart"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textColor= "@color/white"
              android:textSize="22dip" 
              android:textStyle="bold"
              android:clickable="true"
			  android:text="@string/labelChart"
			  android:textAppearance="?android:attr/textAppearanceLarge" />
     
     <TextView android:id="@+id/textViewChartValue"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:textColor= "@color/white"
              android:textSize="18dip" 
              android:textStyle="bold"
			  android:text="@string/valueChart"
			  android:textAppearance="?android:attr/textAppearanceLarge" />
        	  
